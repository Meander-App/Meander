{
	"compilerOptions": {
		"noImplicitAny": true,
		"strict": true,
		"typeRoots": ["./src/@types", "./node_modules/@types"],
		"lib": [
			"dom",
			"es2019",
			"es2020.bigint",
			"es2020.string",
			"es2020.symbol.wellknown"
		],
		"module": "commonjs",
		"esModuleInterop": true,
		"target": "es6",
		"jsx": "react",
		"allowJs": true,
		"moduleResolution": "node"
	},
	"include": ["**/*.ts", "**/*.tsx", "./client/assets/*"]
}
